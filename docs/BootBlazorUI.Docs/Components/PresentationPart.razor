<section class="mt-3">
    <h4>@Title</h4>
    @if (Description != null)
    {
    <blockquote class="bg-light p-2">
        @Description
    </blockquote>
    }
    <BootTabControl>
        <BootTabControlPage Title="运行效果">
            @RunTemplate
        </BootTabControlPage>
        <BootTabControlPage Title="示例代码" MaxHeight="400">
            @CodeTemplate
        </BootTabControlPage>
    </BootTabControl>
</section>

@code{
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public RenderFragment Description { get; set; }
    [Parameter]
    public RenderFragment RunTemplate { get; set; }
    [Parameter]
    public RenderFragment CodeTemplate { get; set; }
}