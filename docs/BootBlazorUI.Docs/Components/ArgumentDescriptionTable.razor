
    <section class="mt-3">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th class="bg-light" colspan="3">@Title</th>
                </tr>
                <tr>
                    <th style="min-width:120px">名称</th>
                    <th style="min-width:100px">类型</th>
                    <th>说明</th>
                </tr>
            </thead>
            <tbody>
                @ChildContent
            </tbody>
        </table>
    </section>


@code{
    /// <summary>
    /// 属性部分，只能有3列，第一列名称，第二列类型，第三列说明
    /// </summary>
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string Title { get; set; }
}