```cs
BootTabControl tabControl;

async Task Swtich(int index)
{
    if (index == 1)
    {
        DialogService.Show(option =>
        {
            option.Message = ""是否要切换选项卡？"";
            option.Type = Dialog.DialogType.Confirm;
            option.Confirm = async (_) =>
            {
                await tabControl.SwitchTo(1);
                StateHasChanged();
            };
        });
    }
    else
    {
        await tabControl.SwitchTo(index);
    }
}
